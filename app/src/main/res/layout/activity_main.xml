<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INPUT SEMBAKO"
        android:textSize="15pt"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>
    <EditText
        android:enabled="false"
        android:id="@+id/et_id"
        android:textColorHint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:hint="ID Barang"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul"/>
    <EditText
        android:id="@+id/et_nama"
        android:hint="Nama Barang"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_id"/>
    <EditText
        android:id="@+id/et_harga"
        android:hint="Harga Barang"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nama"/>
    <EditText
        android:id="@+id/et_stock"
        android:hint="Stock Barang"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_harga"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/et_stock"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:background="#8B0000"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btn_lihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lihat data"
        android:layout_below="@+id/btn_submit"
        android:background="#8B0000"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

</RelativeLayout>